{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build/private",
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es2017",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "inlineSourceMap": true
  },
  "include": [
    "./src/server/**/*.ts",
    "./src/utils/**/*.ts",
  ],
  "exclude": [
    "./node_modules"
  ]
}