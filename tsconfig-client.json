{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es2017",
    "declaration": false,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "noImplicitAny": false,
    "inlineSourceMap": true
  },
  "include": [
    "src/client/**/*.ts",
    "src/utils/**/*.ts",
  ],
  "exclude": [
    "./node_modules"
  ]
}