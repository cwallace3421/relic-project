{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es2017",
    "declaration": false,
		"esModuleInterop": true,
    "noImplicitAny": false,
    "inlineSourceMap": true
  },
  "typeRoots": [
    "node_modules/@types",
    "node_module/phaser/types"
  ],
  "types": [
    "Phaser"
  ],
  "include": [
    "./src/client/**/*.ts",
    "./src/utils/**/*.ts",
  ],
  "exclude": [
    "./node_modules"
  ]
}