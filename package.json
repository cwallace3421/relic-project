{
  "name": "relic-project",
  "version": "0.1.0",
  "description": "a video game",
  "scripts": {
    "build:client": "cross-env NODE_ENV=production webpack",
    "build:server": "tsc --listFilesOnly && cross-env NODE_ENV=production tsc --build --verbose",
    "build": "npm run build:client && npm run build:server",
    "start": "cross-env NODE_ENV=production node ./build/private/server/index.js",
    "dev": "nodemon ./src/server/index.ts",
    "schema-codegen": "schema-codegen src/server/rooms/*.ts --ts --output src/client/schema/"
  },
  "author": "Conor Wallace",
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/redis": "^2.8.12",
    "cross-env": "^7.0.3",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "nodemon": "^2.0.16",
    "pixi-viewport": "^3.17.0",
    "pixi.js": "^5.0.0-rc",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-middleware": "^5.3.3",
    "webpack-dev-server": "^4.9.0",
    "webpack-hot-middleware": "^2.25.1"
  },
  "dependencies": {
    "colyseus": "^0.14.23",
    "colyseus.js": "^0.14.13",
    "cookie-parser": "^1.4.5",
    "express": "^4.16.4",
    "express-basic-auth": "^1.1.6",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.5.1"
  },
  "engines": {
    "node": "16.x"
  }
}
